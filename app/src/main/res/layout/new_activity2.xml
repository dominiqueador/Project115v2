<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".NewActivity2"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@color/colorPrimary"
        tools:context="com.ariz.ador.project115v2.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:src="@drawable/sblogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/frappe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/frappe" />

        <CheckBox
            android:id="@+id/strawfrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:checked="false"
            android:padding="20dp"
            android:text="Strawberry Frappucino"
            android:fontFamily="serif"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <CheckBox
            android:id="@+id/javacfrap"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="Java Chip"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/oreofrap"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:checked="false"
            android:fontFamily="serif"
            android:padding="20dp"
            android:text="Oreo Frappucino"
            android:textColor="#f000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="3dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Insert Details Here:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/name"
            android:inputType="textCapWords"
            android:padding="15dp"
            android:textColorHint="#000"
            android:textStyle="bold|italic"
            android:background="#D8D8D8"
            android:layout_marginTop="5dp"/>

        <EditText
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_cont"
            android:layout_marginTop="5dp"
            android:inputType="textCapWords"
            android:hint="@string/cont"
            android:padding="15dp"
            android:textColorHint="#000"
            android:textStyle="bold|italic"
            android:background="#D8D8D8"
            />

        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Select Pick Up Location:"
            android:textSize="20dp" />


        <RadioButton
            android:id="@+id/dapitan"
            android:gravity=""
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="@string/dapitan"
            android:textColor="#154"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="10dp"/>

            <RadioButton
                android:id="@+id/noval"
                android:padding="10dp"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:checked="false"
                android:text="@string/noval"
                android:textColor="#154"
                android:textSize="15sp"
                android:textStyle="bold" />

        <RadioButton
            android:id="@+id/espana"
            android:padding="10dp"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="@string/espana"
            android:textColor="#154"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="48dp"
                android:onClick="decrement"
                android:layout_height="48dp"

                android:text=" - "
                tools:ignore="OnClick" />

            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:textSize="25sp"

                android:layout_marginLeft="10sp"
                android:textColor="#000000"
                android:id="@+id/txt_quantity"
                android:layout_marginTop="16dp"
                android:text="0"

                />


            <Button
                android:layout_width="48dp"
                android:onClick="increment"
                android:layout_marginLeft="10sp"

                android:layout_height="48dp"
                android:text="+"
                tools:ignore="OnClick" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:textAllCaps="true"
            android:text="Order Summary : "
            android:fontFamily="serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/txt_price"
            android:layout_marginTop="12dp"
            android:text="$0" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:onClick="submitOrder"
            android:text=" Show Order "
            tools:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/colorAccent"
            android:fontFamily="serif"
            android:onClick="finalOrder"
            tools:textSize="15sp"
            android:text="Submit Order"/>

    </LinearLayout>
</ScrollView>